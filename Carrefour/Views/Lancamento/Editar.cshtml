@using Carrefour.Domain.enums;
@model Carrefour.Domain.Entities.Lancamento

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Lancamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descricao">Descrição</label>
                <input asp-for="Descricao" class="form-control" required>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Valor">Valor</label>
                <input asp-for="Valor" type="number" step="0.01" class="form-control" required>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tipo">Tipo</label>
                <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoLancamento>()" class="form-control" required>
                    <option value="">Selecione o tipo</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Data">Data</label>
                <input asp-for="Data" type="date" class="form-control" required>
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
