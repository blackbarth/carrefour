@using Carrefour.Domain.enums;
@model Carrefour.Domain.Entities.Lancamento

@{
    ViewBag.Title = "Adicionar Lançamento";
}

<h2>Adicionar Lançamento</h2>

<form asp-action="Adicionar" method="post">
    <div class="form-group">
        <label asp-for="Descricao">Descrição</label>
        <input asp-for="Descricao" class="form-control" required>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Valor">Valor</label>
        <input asp-for="Valor" type="number" step="0.01" class="form-control" required>
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipo">Tipo</label>
        <select asp-for="Tipo" asp-items="Html.GetEnumSelectList<TipoLancamento>()" class="form-control" required>
            <option value="">Selecione o tipo</option>
        </select>
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Data">Data</label>
        <input asp-for="Data" type="date" class="form-control" required>
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
